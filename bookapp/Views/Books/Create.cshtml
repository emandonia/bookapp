@using Book_Dal

@model  Book

@{
    ViewData["Title"] = "Create New Book";
}

<h1>Create New Book</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>

    @* <div class="form-group">
        <label for="AuthorName">AuthorName</label>
        <input type="text" class="form-control" id="AuthorName" name="AuthorName" required />
    </div> *@
    <div class="form-group">
        <label for="authorId">Select Author</label>
        <select id="authorId" name="AuthorId" class="form-control">
            @foreach (var author in ViewBag.Authors as SelectList)
            {
                <option value="@author.Value">@author.Text</option>
            }
        </select>
    </div>

    


    <div class="form-group">
        <label for="YearPublished">Year Published</label>
        <input type="number" class="form-control" id="YearPublished" name="YearPublished" required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
