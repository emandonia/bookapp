@using Book_Dal

@model  Book

@{
    ViewData["Title"] = "Create New Book";
}

<h1>Create New Book</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>

    @* <div class="form-group">
        <label for="AuthorName">AuthorName</label>
        <input type="text" class="form-control" id="AuthorName" name="AuthorName" required />
    </div> *@
    <div class="form-group">
        <label asp-for="AuthorId">Author</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors, "AuthorId", "Name"))"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="YearPublished">Year Published</label>
        <input type="number" class="form-control" id="YearPublished" name="YearPublished" required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
