@using Book_Dal



@model Book

@{
    ViewData["Title"] = "Book Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>@Model.Title</h2>
   
    <p><strong>Published Date:</strong> @Model.YearPublished.ToString("MMMM dd, yyyy")</p>
    
    <!-- Assuming you have an Author property on the Book model -->
    <p><strong>Author:</strong> @Model.Author.Name</p>

    <!-- If you have more properties, add them here -->
    <p><strong>Author Bio:</strong> @Model.Author.Bio</p>

    <!-- If there's an image, display it -->
    @if (!string.IsNullOrEmpty(Model.Author.ImagePath))
    {
        <div class="form-group">
            <label>Author Image</label>
            <img src="@Url.Content("~/uploads/" + Model.Author.ImagePath)" alt="Author Image" width="150" />
        </div>
    }
</div>